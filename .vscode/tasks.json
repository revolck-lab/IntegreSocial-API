{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Generate Prisma Client",
      "type": "shell",
      "command": "pnpm prisma:generate",
      "problemMatcher": []
    },
    {
      "label": "Run Prisma Migrations",
      "type": "shell",
      "command": "pnpm prisma:migrate",
      "problemMatcher": []
    },
    {
      "label": "Run Prisma Studio",
      "type": "shell",
      "command": "pnpm prisma:studio",
      "problemMatcher": []
    },
    {
      "label": "Start Dev Server",
      "type": "shell",
      "command": "pnpm start:dev",
      "problemMatcher": []
    },
    {
      "label": "Lint Project",
      "type": "shell",
      "command": "pnpm lint",
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "Build Project",
      "type": "shell",
      "command": "pnpm build",
      "problemMatcher": ["$tsc"]
    }
  ]
}
